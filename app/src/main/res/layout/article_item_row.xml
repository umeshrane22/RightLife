<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="1dp">

    <TextView
        android:id="@+id/txt_article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card_16dp"
        android:layout_marginEnd="@dimen/margin_card_16dp"
        android:fontFamily="@font/merriweather_regular"
        android:gravity="center_vertical"
        android:text="Consuming adequate magnesium may enhance mood and promote healthy sleep. Additionally, it might lessen your chance of migraines and cardiovascular problems. Magnesium is necessary for your body to carry out over 300 enzymatic activities. A lack of magnesium in the body could have a significant negative impact on your health. \n\nEven though a wide range of foods contain magnesium, taking supplements can be beneficial, especially for those with low intake. However, selecting a magnesium supplement can be challenging because they come in a multitude of shapes and sizes. \n \n This article describes the many kinds and dosages of magnesium supplements and examines their advantages and disadvantages."
        android:textColor="@color/txt_color_header"
        android:textSize="@dimen/textsize_medium"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/ic_launcher_foreground" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/textsize_extrasmall"
                    android:fontFamily="@font/merriweather_bold"
                    android:text="Boost Your Intake"
                    android:textColor="@color/color_godeeper_orange"
                    android:textSize="@dimen/textsize_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/relative_img_product"
                        android:layout_width="120dp"
                        android:layout_height="90dp"

                        android:layout_margin="16dp">

                        <ImageView
                            android:id="@+id/img_thumbnail_product"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/productimageimune"
                            tools:ignore="DuplicateIds" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_desc_card_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/textsize_extrasmall"
                        android:layout_toRightOf="@+id/relative_img_product"
                        android:fontFamily="@font/merriweather_bold"
                        android:text="5 best exercises to strengthen arthriticknees with physical therapy physics"
                        android:textColor="@color/txt_color_header"
                        android:textSize="@dimen/textsize_medium" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_img_product">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_price_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:fontFamily="@font/dmsans_bold"
                                android:text="₹ 1,099/-"
                                android:textColor="@color/txt_color_header"
                                android:textSize="@dimen/textsize_small" />

                            <TextView
                                android:id="@+id/txt_saved_price_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="16dp"
                                android:fontFamily="@font/dmsans_regular"
                                android:text="₹1,499/- you save ₹400"
                                android:textColor="@color/txt_color_header"
                                android:textSize="@dimen/textsize_small" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_btn_buy_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/roundedcornerbutton"
                            android:backgroundTint="@color/menuselected"
                            android:fontFamily="@font/dmsans_medium"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="2dp"
                            android:text="Buy Now"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/textsize_extrasmall" />
                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_service_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/textsize_extrasmall"
                    android:fontFamily="@font/merriweather_bold"
                    android:text="Check Your Health Snapshot"
                    android:textColor="@color/color_godeeper_orange"
                    android:textSize="@dimen/textsize_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/relative_img_service"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_margin="16dp">

                        <ImageView
                            android:id="@+id/img_thumbnail_service"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/image5_rlpage_edit"
                            tools:ignore="DuplicateIds" />



                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_desc_card_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/textsize_extrasmall"
                        android:layout_toRightOf="@+id/relative_img_service"
                        android:fontFamily="@font/merriweather_bold"
                        android:text="5 best exercises to strengthen arthriticknees with physical therapy physics"
                        android:textColor="@color/txt_color_header"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textSize="@dimen/textsize_medium" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/relative_img_service"
                        android:layout_alignBottom="@+id/relative_img_service"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_tag_service"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/health_cam_iconrl" />

                        <TextView
                            android:id="@+id/txt_tag_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="Health Cam"
                            android:textColor="@color/txt_color_header"
                            android:textSize="@dimen/textsize_small" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_verified_rightarrow"
                            android:padding="5dp"
                            android:src="@drawable/ic_small_arrow_right" />

                        <TextView
                            android:id="@+id/txt_viewcount_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/dmsans_medium"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_small" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_articlecard3_title_video"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/textsize_extrasmall"
                    android:layout_toEndOf="@id/rlimg12"
                    android:fontFamily="@font/merriweather_bold"
                    android:text="Go Deeper"
                    android:textColor="@color/color_godeeper_orange"
                    android:textSize="@dimen/textsize_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/relative_img_video"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp">

                        <ImageView
                            android:id="@+id/img_thumbnail_card3_video"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitXY"

                            android:src="@drawable/image5_rlpage_edit" />

                        <ImageView
                            android:id="@+id/img_content_type_video"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"

                            android:src="@drawable/ic_video_content"
                            tools:ignore="DuplicateIds" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_desc_card3_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/textsize_extrasmall"
                        android:layout_toLeftOf="@+id/relative_img_video"
                        android:fontFamily="@font/merriweather_bold"
                        android:text="5 best exercises to strengthen arthriticknees with physical therapy physics"
                        android:textColor="@color/txt_color_header"
                        android:textSize="@dimen/textsize_medium" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_img_video"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_tag_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_tag" />

                        <TextView
                            android:id="@+id/txt_tag_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="Positivity"
                            android:textColor="@color/txt_color_header"
                            android:textSize="@dimen/textsize_small" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_eye" />

                        <TextView
                            android:id="@+id/txt_viewcount_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="243"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_small" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title_card_series"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/textsize_extrasmall"
                    android:layout_toEndOf="@id/rlimg12"
                    android:fontFamily="@font/merriweather_bold"
                    android:text="Go Deeper"
                    android:textColor="@color/color_godeeper_orange"
                    android:textSize="@dimen/textsize_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/relative_img_series"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp">

                        <ImageView
                            android:id="@+id/img_thumbnail_series"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitXY"

                            android:src="@drawable/image5_rlpage_edit"
                            tools:ignore="DuplicateIds" />

                        <ImageView
                            android:id="@+id/img_content_type_series"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"

                            android:src="@drawable/ic_series_content"
                            tools:ignore="DuplicateIds" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_desc_card_series"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/textsize_extrasmall"
                        android:layout_toLeftOf="@+id/relative_img_series"
                        android:fontFamily="@font/merriweather_bold"
                        android:text="5 best exercises to strengthen arthriticknees with physical therapy physics"
                        android:textColor="@color/txt_color_header"
                        android:textSize="@dimen/textsize_medium" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_img_series"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_tag_series"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_tag" />

                        <TextView
                            android:id="@+id/txt_tag_series"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="Positivity"
                            android:textColor="@color/txt_color_header"
                            android:textSize="@dimen/textsize_small" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_eye" />

                        <TextView
                            android:id="@+id/txt_viewcount_series"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="243"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_small" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFECE9"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/merriweather_bold"
            android:textSize="@dimen/textsize_large"
            android:layout_marginTop="14dp"
            android:text="Fun Facts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:minLines="5"
            android:text="“Dark chocolate is a good source of magnesium. So, indulge in a small piece guilt-free!”" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
