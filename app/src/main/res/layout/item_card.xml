<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/facialconcept" />

        <TextView
            android:id="@+id/workshop_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/viewiconbg"
            android:drawableStart="@drawable/ic_eye"
            android:drawablePadding="2dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:paddingStart="5dp"
            android:text="21.2k"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_extrasmall" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/opacityimage"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="1dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/promotitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/healthcam_rect"
                android:drawableStart="@drawable/ic_banner_t_healthcam"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Health Cam"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_small" />

            <TextView
                android:id="@+id/promodescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="2dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/merriweather_bold"
                android:gravity="center_horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Get detailed health vitals with a \n 30-second face scan."
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_large" />

            <TextView
                android:id="@+id/promobtntxt"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/roundedcornershape"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_banner_recordnow"
                android:drawablePadding="5dp"
                android:drawableTint="@color/rightlife"

                android:fontFamily="@font/dmsans_bold"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp"
                android:text="Scan Now"
                android:textColor="@color/rightlife"
                android:textSize="@dimen/textsize_small" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
