<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_service_pane_odd"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="9dp"
    android:background="@drawable/roundedcornerbutton"
    android:backgroundTint="#FDE6FF"
    android:elevation="5dp"
    android:padding="6dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_service_pane_odd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:src="@drawable/ic_healthcam_logo" />

    <TextView
        android:id="@+id/tv_service_pane_header_odd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:fontFamily="@font/merriweather_regular"
        android:gravity="center"
        android:padding="15dp"
        android:text="Mind\nAudit"
        android:textColor="@color/txt_color_header"
        android:textSize="@dimen/textsize_medium" />
</LinearLayout>
