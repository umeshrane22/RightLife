<!-- res/drawable/progress_layer.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer (unfilled part) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Rounded corners for the background -->
            <solid android:color="@color/chip_background_color"/>
        </shape>
    </item>

    <!-- Progress layer (filled part) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp"/> <!-- Rounded corners for the progress -->
                <solid android:color="@color/dark_yellow"/>
            </shape>
        </clip>
    </item>

</layer-list>
